{
  "name": "alexguirre-dev-site",
  "author": "alexguirre",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prod:bundle": "webpack --config webpack.config.prod.js",
    "prod:site": "cross-env ELEVENTY_MODE=PROD eleventy",
    "dev": "npm run dev:bundle & npm run dev:site",
    "dev:bundle": "webpack --config webpack.config.dev.js",
    "dev:site": "cross-env ELEVENTY_MODE=DEV eleventy --serve",
    "clean": "rimraf ./_site",
    "deploy": "npm-run-all clean prod:bundle prod:site"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "cross-env": "^7.0.3",
    "html-minifier": "^4.0.0",
    "luxon": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.9.0"
  },
  "dependencies": {
    "lit": "^2.7.6"
  }
}
